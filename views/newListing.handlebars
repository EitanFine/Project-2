  <style>
    @CHARSET "UTF-8";

    * {
      -webkit-box-sizing: border-box;
      -moz-box-sizing: border-box;
      box-sizing: border-box;
      outline: none;
    }

    body {
      background: url(images/bg.jpg) no-repeat center center fixed;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
    }

    .login-form {
      margin: 100px auto;
      max-width: 500px;
      font: 15px/1.6em Lato, serif;
    }

    .login-form .panel {
      border: none;
      -webkit-box-shadow: 0px 0px 8px 0px rgba(0, 0, 0, 0.63);
      -moz-box-shadow: 0px 0px 8px 0px rgba(0, 0, 0, 0.63);
      box-shadow: 0px 0px 8px 0px rgba(0, 0, 0, 0.63);
    }

    .login-form .panel .panel-heading {
      color: #fff;
      background: #6e91af;
      line-height: 2.4em;
      font-weight: bold;
      padding-left: 26px;
    }

    .login-form .panel .panel-body {
      background: #f2f2f2;
      padding: 20px 26px;
      border-bottom-left-radius: 5px;
      border-bottom-right-radius: 5px;
      -webkit-border-bottom-left-radius: 5px;
      -moz-border-radius-bottomleft: 5px;
      -webkit-border-bottom-right-radius: 5px;
      -moz-border-radius-bottomright: 5px;
    }

    form[role=login] {
      color: #a5a5a5;
    }

    form[role=login] label {
      font-weight: normal;
    }

    form[role=login] input,
    form[role=login] button {
      font-size: 14px;
    }

    form[role=login] input {
      margin: .5em 0;
    }

    form[role=login] button {
      margin-top: 2em;
      font-weight: bold;
    }
  </style>
</head>

<body>

  <section class="container">
    <section class="login-form">
      <div class="panel panel-default">
        <div class="panel-heading">CREATE NEW LISTING</div>
        <div class="panel-body">
          <form method="post" action="" class="create-update-form " role="login">

            {{!-- this whole block is for the drop down for categories and it saves the category ID for the new item --}}
            <div class="form-group">
              <label for="auth">Category: </label>
              <div class="input-group mb-3">
                <select class="custom-select" name="itemCatId">
                  {{#each categories}}
                  <option value="{{this.id}}">{{this.categoryName}}</option>
                  {{/each}}
                </select>
              </div>
            </div>

            {{!-- ---------------------------------------------- --}} {{!-- this whole block is for the drop down for users and it saves
            the user ID for the new item--}}
            <div class="form-group">
              <label for="auth">User: </label>
              <div class="input-group mb-3">
                <select class="custom-select" name="itemUserId">
                  {{#each users}}
                  <option value="{{this.id}}">{{this.name}}</option>
                  {{/each}}
                </select>
              </div>
            </div>
            <div class="form-group">
              <div class="pull-right">
                <a href="#">Sign up now</a>
              </div>
              <label for="itemName">Item Name</label>
              <input type="textarea" name="itemName" id="name" placeholder="List item to rent" required class="form-control input-lg" />
            </div>

            <div class="form-group">
              <div class="pull-right">
              </div>
              <label for="itemDescription">Description</label>
              <input type="textarea" name="itemDescription" id="description" placeholder="Add a brief description about your item"  required class="form-control input-lg" />
            </div>
            <div class="form-group">
              <div class="pull-right">
              </div>
              <label for="itemPrice">Price</label>
              <input type="textarea" name="itemPrice" id="price" required class="form-control input-lg" />
            </div>
            <div class="form-group">
              <button type="submit" name="go" class="btn btn-lg btn-info btn-block">Post Item</button>
            </div>
          </form>
        </div>
      </div>
    </section>
  </section>



</body>

</html>