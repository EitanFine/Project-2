<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  
  <div class="container">
    <div class="row"></div>

    <hr>
    <div class="panel panel-primary">
      <div class="panel-heading">

        <section class="container">
          <section class="login-form">
            <div class="panel panel-default">
              <div class="panel-heading">CREATE NEW LISTING</div>
              <div class="panel-body">
                <form method="post" action="" class="create-update-form " role="login">


                  <div class="form-group">
                    <label for="auth">Category: </label>
                    <div class="input-group mb-3">
                      <select class="custom-select" name="itemCatId">
                        {{#each categories}}
                        <option value="{{this.id}}">{{this.categoryName}}</option>
                        {{/each}}
                      </select>
                    </div>
                  </div>


                  <div type="hidden" class="form-group">

                    <div class="input-group mb-3">

                      <input type="hidden" name="itemUserId" value="{{user}}">
                    </div>
                  </div>
                  <div class="form-group">

                    <label for="itemName">Item Name</label>
                    <input type="textarea" name="itemName" id="name" placeholder="List item to rent" required class="form-control input-lg" />
                  </div>

                  <div class="form-group">
                    <div class="pull-right">
                    </div>
                    <label for="itemDescription">Description</label>
                    <input type="textarea" name="itemDescription" id="description" placeholder="Add a brief description about your item" required
                      class="form-control input-lg" />
                  </div>
                  <div class="form-group">
                    <div class="pull-right">
                    </div>
                    <label for="itemURL">Image URL</label>
                    <input type="textarea" name="itemURL" id="description" placeholder="Add a URL to a picture of your item" class="form-control input-lg"
                    />
                  </div>
                  <div class="form-group">
                    <div class="pull-right">
                    </div>
                    <label for="itemPrice">Price</label>
                    <input type="textarea" name="itemPrice" id="price" required class="form-control input-lg" />
                  </div>
                  <div class="form-group">
                    <button type="submit" name="go" class="btn btn-lg btn-info btn-block">Post Item</button>
                  </div>
                </form>
              </div>
            </div>
          </section>
        </section>


